:80 {
    # Serve all files from the current directory
    file_server {
        hide .git .gitignore .dockerignore Dockerfile docker-compose.yaml Caddyfile LLM.md
    }
    
    # Compress responses
    encode gzip
    
    # Set appropriate cache headers for static assets
    @static {
        path *.css *.js *.json *.png *.jpg *.jpeg *.gif *.svg *.ico *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000, immutable"
    
    # Dynamic content (HTML) - don't cache
    @html {
        path_regexp ^.*\.html?$
    }
    header @html Cache-Control "public, max-age=0, must-revalidate"
    
    # Hash-calendar SPA: rewrite hash-based routes to index.html
    try_files {path} /index.html
    
    # Log requests
    log {
        output stdout
        format console
    }
}
